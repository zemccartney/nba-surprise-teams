{
  "name": "surprise-teams",
  "type": "module",
  "version": "0.0.1",
  "engineStrict": true,
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "astro": "astro",
    "build": "npm run build:base && npm run db:migrate",
    "build:base": "npm run check && astro build",
    "check": "run-s \"astro check\" fmt:check lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "drizzle-kit migrate",
    "db:migrate": "tsx migrator.ts",
    "db:studio": "drizzle-kit studio",
    "db:local": "turso dev",
    "deps": "ncu -i --format group",
    "dev": "run-p db:migrate:local \"astro dev\" typewatch",
    "info": "astro info",
    "fmt": "prettier . --write",
    "fmt:check": "prettier . --check",
    "lint": "eslint .",
    "preview": "astro preview",
    "typewatch": "astro check --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.2.1",
    "@astrojs/react": "^4.2.0",
    "@astrojs/tailwind": "^5.1.5",
    "@fontsource-variable/sixtyfour": "^5.1.1",
    "@libsql/client": "^0.14.0",
    "@radix-ui/react-popover": "1.1.6",
    "@sentry/astro": "^8.54.0",
    "@sentry/cloudflare": "^8.54.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "astro": "^5.2.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.20.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@typescript-eslint/parser": "^8.23.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "npm-check-updates": "^17.1.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tsx": "^4.19.2",
    "typescript-eslint": "^8.23.0"
  }
}
