{
  "name": "surprise-teams",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "archive:all": "tsx archiver/script.ts",
    "archive:latest": "tsx archiver/script.ts --latest",
    "astro": "astro",
    "prebuild": "npm run check && npm test -- run",
    "build": "npm run prebuild && astro build",
    "cf:wip": "git commit -m \"[CF-Pages-Skip] WIP\" && git push",
    "check": "astro check && npm run fmt:check && npm run lint",
    "deps": "ncu -i --format group --cooldown 3",
    "fmt": "prettier . --write",
    "fmt:check": "prettier . --check",
    "info": "astro info",
    "kv:destroy": "rm -rf .wrangler/state",
    "kv:reset": "wrangler kv key delete $(node -e \"import fs from 'fs'; const seasons = JSON.parse(fs.readFileSync('src/content/seasons.json', 'utf8')); console.log(seasons.sort((a,b) => b.id.localeCompare(a.id))[0].id)\") --binding=GAMES_KV --local",
    "lint": "eslint .",
    "lint:debug": "eslint --inspect-config",
    "preview": "astro preview",
    "start": "rm -r .wrangler || true && wrangler types && concurrently  --kill-others --names astro,ts -c red,blue \"astro dev\" \"npm run typewatch\"",
    "test": "vitest",
    "typewatch": "astro check --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/react": "^4.4.0",
    "@fontsource-variable/sixtyfour": "^5.2.8",
    "@fontsource/iosevka-curly": "^5.2.5",
    "@radix-ui/react-popover": "1.1.15",
    "@sentry/astro": "^10.15.0",
    "@sentry/cloudflare": "^10.15.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "astro": "^5.14.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^2.15.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/eslint-plugin": "^1.3.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-package-json": "^0.56.3",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "npm-check-updates": "^19.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.2"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "engineStrict": true,
  "precommit": [
    "prebuild"
  ]
}
