---
import Link from "../../components/link.astro";
import * as SeasonUtils from "../../data/seasons";
import Subpage from "../../layouts/subpage.astro";
import Typography from "../../layouts/typography.astro";

const archivedSeasons = await SeasonUtils.getArchivedSeasons();
---

<Subpage
  description="Listing of seasons tracked for surprise teams so far"
  title="Archive"
>
  <Typography class="mx-auto px-4 lg:max-w-[60%]">
    <h1 class="text-center font-title text-2xl text-lime-400 md:text-4xl">
      Archive
    </h1>
    <div
      class="mx-auto mb-4 flex flex-row justify-center gap-32 p-8 text-center md:mb-12"
    >
      <Link class="text-4xl" href="/archive/stats">Stats</Link>
      <Link class="text-4xl" href="/archive/sources">Sources</Link>
    </div>
    <div class="flex flex-col items-center gap-6 md:gap-12">
      {
        archivedSeasons.map((season) => (
          <Link class="text-4xl" href={`/${season.id}`}>
            {SeasonUtils.abbreviateSeasonRange(season)}
          </Link>
        ))
      }
    </div>
  </Typography>
</Subpage>
