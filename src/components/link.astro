---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"a">;
const { class: classStr, href, ...attrs } = Astro.props;
---

<style>
  @reference "../styles/global.css";

  .NBASTT-Link.active {
    @apply pointer-events-none cursor-default text-indigo-100;
  }
</style>

<a
  class:list={[
    "NBASTT-Link",
    "text-indigo-400 underline hover:text-indigo-100",
    classStr,
  ]}
  href={href}
  {...attrs}><slot /></a
>
