---
import "@fontsource/iosevka-curly/400.css";
import "@fontsource/iosevka-curly/700.css";
import "@fontsource-variable/sixtyfour/full.css";

interface Props {
  description?: string;
  title?: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width" name="viewport" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />

    <title>{title ? `${title} - NBASTT` : "NBA Surprise Teams Tracker"}</title>
    <meta
      content={description ||
        "Tracking if NBA teams exceed their low preseason expectations"}
      name="description"
    />
  </head>
  <body>
    <div class="min-h-full bg-dark-emerald">
      <div class="mx-auto md:container">
        <header class="p-8">
          <slot name="header" />
        </header>
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  /* TODO Figure out if using font correctly (font-face); and ok to use bitmap version of font? What is that? */
  @font-face {
    font-family: "ChicagoKare-Regular";
    src:
      url("/fonts/ChicagoKare-Regular.woff2") format("woff2"),
      url("/fonts/ChicagoKare-Regular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
