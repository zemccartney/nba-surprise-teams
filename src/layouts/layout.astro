---
import "@fontsource/iosevka-curly/400.css";
import "@fontsource/iosevka-curly/700.css";
import "@fontsource-variable/sixtyfour/full.css";

import "../styles/global.css";

interface Props {
  description?: string;
  title?: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width" name="viewport" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />

    <title>{title ? `${title} - NBASTT` : "NBA Surprise Teams Tracker"}</title>
    <meta
      content={description ||
        "Tracking if NBA teams exceed their low preseason expectations"}
      name="description"
    />
  </head>
  <body>
    <div class="bg-dark-emerald min-h-full">
      <div class="mx-auto md:container">
        <header class="p-8">
          <slot name="header" />
        </header>
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
